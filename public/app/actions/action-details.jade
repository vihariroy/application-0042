.action-modal-container
  .action-modal-image
    img.action-modal-image11(src="../img/image-placeholder.png" ng-show="!action.image || action.image === 'data:image/png;base64,'")
    img.action-modal-image1(ng-src="{{action.image}}" ng-hide="!action.image || action.image === ''")
    img.action-modal-image2.shadow(src="img/svg/x.svg", ng-click="closeModal()")

    ul#time-ok-icons(style="position: absolute; right: 1em; bottom: 0" ng-show="identity.isAuthenticated()")
      a(href="" ng-show="identity.currentUser._id === action.user._id" ng-click="myActionUpdateOpen(action)")
        img.action-modal-image.shadow(src="img/svg/edit-action-icon.svg")
      a(href="" ng-show="identity.currentUser._id === action.user._id" ng-click="deleteAction()")
        img.action-modal-image.shadow(src="img/svg/delete-action-icon.svg")
      a(href="")
        img#timerOK.action-modal-image.shadow(src="../../img/svg/timer-icon.svg", ng-if="action.completed === true || action.completed === undefined", ng-click="scheduleCompleteActionModal(action)")
        img#timerOK.action-modal-image.shadow(src="../../img/svg/ok-icon.svg", ng-if="action.completed === false", ng-click="scheduleCompleteActionModal(action)")

  hr
  #group
    h1 {{action.actionName}}
    p(ng-hide="!action.user.firstName && !action.user.lastName") {{action.user.firstName}} {{action.user.lastName}}
    p(ng-show="!action.user.firstName && !action.user.lastName") {{action.user.username}}
  
  hr
  h3 {{action.startedDatetime | date:'hh:mm:ss | EEE d MMM y'}}
  
  ul.list-unstyled.action-detail-list
    li
      img(src="img/clock-icon.png")
      {{action.timeSpent}}
    li
      img(src="img/money-icon.png", ng-click="test()")
      {{action.moneySpent}}
    li
      img(src="img/location-icon.png")
      {{action.location}}
    li
      img(src="img/repeat-mini-icon.png")
      {{action.repeat}}
  hr
  h3 {{action.user.story}}
    
  form.createMessageForm(name="createMessageForm" ng-submit="createMessage(action, comment); comment = null" ng-show="identity.isAuthenticated()")
    ul#textareaId.list-unstyled
      input.form-control(name="comment", type="text", placeholder="Add a comment...", ng-model="comment")

  ul.list-unstyled.action-messages
    li#comment-list(ng-repeat="message in action.messages | orderBy:-startedDatetime:reverse")
      .message-image-container.col-md-2
        img(src="../img/user-placeholder.png" ng-show="!message.user.image || message.user.image === 'data:image/png;base64,'")
        img(ng-src='{{message.user.image}}')
      span.col-md-10(ng-hide="!message.user.firstName && !message.user.lastName") {{message.user.firstName}} {{message.user.lastName}} | {{message.startedDatetime | date}}
      span.col-md-10(ng-show="!message.user.firstName && !message.user.lastName") {{message.user.username}} | {{message.startedDatetime | date}}
      br
      .comment-text
        {{message.comment}}
        