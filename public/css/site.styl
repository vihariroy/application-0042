.line-clamp {
  position: relative;
  height: 1.2em; /* exactly three lines */
}
.line-clamp:after {
  content: "";
  text-align: right;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 70%;
  height: 1.2em;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1) 50%);
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
  .line-clamp {
